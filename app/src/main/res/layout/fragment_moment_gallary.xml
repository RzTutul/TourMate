<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MomentGallary">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/momentPicRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        />


    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/addPictureCard"
        android:layout_margin="6dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:fontFamily="@font/nikoshlight"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:text="No Picture Found!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:fontFamily="@font/fontlight"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:text="Tap + upload one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:padding="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
       android:id="@+id/takeaPicbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#337E4C"

        android:src="@android:drawable/ic_menu_camera" />


</RelativeLayout>